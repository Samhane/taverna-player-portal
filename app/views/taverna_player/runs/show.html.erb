<h1><%= @run.name -%></h1>

<div id="run-info">
  <p>
    <b>Workflow:</b>
    <%= link_to @run.workflow.title, main_app.workflow_path(@run.workflow) -%>
  </p>

  <p>
    <b>Status:</b>
    <%= @run.status_message -%> <%= run_state_icon(@run) -%>
  </p>

  <p>
    <b>Create time:</b>
    <%= @run.create_time %>
  </p>

  <p>
    <b>Start time:</b>
    <%= @run.start_time %>
  </p>

  <p>
    <b>Finish time:</b>
    <%= @run.finish_time %>
  </p>
</div>


<%= render "button", :run => @run %>

<% if @run.inputs.size > 0 %>
  <%= render "inputs", :run => @run %>
<% end %>

<%= render "interaction", :run => @run, :interaction => @interaction %>

<%= render "outputs", :run => @run %>

<% unless @run.complete? %>
  <%= render "poll", :reload => run_path(@run) %>
<% end %>
