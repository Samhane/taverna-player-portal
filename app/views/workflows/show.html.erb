<div class="page-header">
  <h1>
    <%= @workflow.title -%>
  </h1>
</div>

<div class="text-right">
  <%= render 'buttons', :workflow => @workflow %>
</div>

<br/>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <p>
        <%= simple_format @workflow.description -%>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3>Inputs</h3>
      <ul>
        <% @workflow.input_ports.each do |input_port| %>
            <li>
              <strong><%= input_port.name %></strong>
              <% if input_port.description %>
                  <p><%= simple_format input_port.description %></p>
              <% end %>
            </li>
        <% end %>
      </ul>

      <h3>Outputs</h3>
      <ul>
        <% @workflow.output_ports.each do |output_port| %>
            <li>
              <strong><%= output_port.name %></strong>
              <% if output_port.description %>
                  <p><%= simple_format output_port.description %></p>
              <% end %>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
